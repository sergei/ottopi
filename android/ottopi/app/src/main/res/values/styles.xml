<resources>

    <style name="Widget.Theme.OttoPi.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Widget.Theme.OttoPi.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="StartLineText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">82sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="StarTimeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="StartLineIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="RaceSetupText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="CalibrationSlider" parent="Widget.MaterialComponents.Slider">
        <item name="trackColor">@color/primaryTextColor</item>
        <item name="thumbColor">@color/primaryTextColor</item>
    </style>

    <style name="NavWptNamesText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="NavWptLargeNamesText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">84sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NavWptAngleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">78sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NavWptLargeAngleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">78sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NavWptDistanceText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PrefsStyle" parent="PreferenceSummaryTextStyle">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ConnectionStatusText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>